# Brand (hardcoded for this app)
BRAND="europcar"

# NextAuth
NEXTAUTH_URL="https://admin.europcar.yourdomain.com"
NEXTAUTH_SECRET="generate_strong_secret_here"

# Email server for NextAuth magic links
EMAIL_SERVER="smtp://user:pass@smtp.host:587"
EMAIL_FROM="noreply@yourdomain.com"

# Admin allowlist (comma-separated emails)
ALLOWLIST="heraklion.airport@europcargreece.com,admin@yourdomain.com"

# Public base URL
PUBLIC_BASE_URL="https://admin.europcar.yourdomain.com"

# Database (shared across all apps)
DATABASE_URL="postgresql://user:password@host:5432/invoice_suite"

# Optional: myDATA
MYDATA_ENV="SANDBOX"
MYDATA_SUBSCRIPTION_KEY=""
MYDATA_USERNAME=""
MYDATA_VAT_NUMBER="EL999999999"

# Optional: Logging
LOG_LEVEL="info"
