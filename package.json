{
  "name": "invoice-suite",
  "version": "1.0.0",
  "private": true,
  "description": "Turborepo monorepo for Invoice Suite - Europcar & Goldcar Greece",
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "dev": "turbo dev",
    "dev:europcar-intake": "turbo dev --filter=europcar-intake",
    "dev:europcar-admin": "turbo dev --filter=europcar-admin",
    "dev:goldcar-intake": "turbo dev --filter=goldcar-intake",
    "dev:goldcar-admin": "turbo dev --filter=goldcar-admin",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "clean:workspaces": "turbo clean && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "^2.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
